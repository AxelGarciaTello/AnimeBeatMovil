<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeBeat.NoticiaPage">

    <ScrollView>
        <StackLayout Padding="10">
            <Image x:Name="ImagenNoticia" HeightRequest="200" Aspect="AspectFill" />
            <Label Text="{Binding titulo}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding noticia}" FontSize="18" LineBreakMode="WordWrap" />
        </StackLayout>
    </ScrollView>

</ContentPage>
